<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgMedicos"
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:scaleType="centerCrop"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            android:src="@drawable/dr_pequena_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMatriculaMedicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/txtNombreMedicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/txtApellidoMedicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/txtIdEspecialidadMedicos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/btnMedico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ver_medico"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/btn_reservarTurno"
                android:textColor="@color/white"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>