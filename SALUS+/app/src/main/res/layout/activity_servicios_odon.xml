<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4D87BBBF"
    tools:context=".ServiciosOdon">

    <TextView
        android:id="@+id/txtHeadProfesionales"
        android:layout_width="440dp"
        android:layout_height="147dp"
        android:alpha="0.95"
        android:background="@color/btn_reservarTurno"
        android:fontFamily="sans-serif"
        android:paddingHorizontal="10dp"
        android:text="SALUS+"
        android:textAlignment="gravity"
        android:textColor="#FFFFFF"
        android:textSize="100sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="180dp"
        android:layout_height="31dp"
        android:text="Profesionales"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinnerProf"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:text="ODONTOLOGÍA"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHeadProfesionales" />

    <Spinner
        android:id="@+id/spinnerProf"
        android:layout_width="309dp"
        android:layout_height="43dp"
        android:layout_marginBottom="10dp"
        android:prompt="@string/seleccion_prof"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button"
        android:layout_width="306dp"
        android:layout_height="37dp"
        android:backgroundTint="@color/azul_900"
        android:text="ACEPTAR"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="446dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="327dp"
        android:layout_height="75dp"
        android:layout_marginBottom="32dp"
        android:text="Contamos con un destacado equipo de especialistas en odontología dispuestos a brindarte la mejor atención y un excelente servicio"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/BtnReserva"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/orange"
        android:onClick="onClick"
        android:rotationY="3"
        android:text="Reservar turno"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="327dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:text="Profesionales de diferentes especialidades: Odontología General. Implantes. Endodoncia.
Periodoncia. Cirugía. Odontopediatría. Ortodoncia. Rehabilitación Protésica. Estomatología."
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/BtnReserva"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="0.25"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
