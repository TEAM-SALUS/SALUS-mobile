<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-79dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgUsuario_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/dr_pequena_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.056"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblTxtDni_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/dni_perfil"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgUsuario_perfil" />

            <TextView
                android:id="@+id/txtDni_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="txtDni"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblTxtDni_perfil"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lblTxtNombre_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/nombre_perfil"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTxtDni_perfil" />

            <EditText
                android:id="@+id/txtNombre_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="txtNombre"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblTxtNombre_perfil"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lblTxtApellido_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/apellido_perfil"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTxtNombre_perfil" />

            <EditText
                android:id="@+id/txtApellido_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="txtApellido"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblTxtApellido_perfil"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lblTxtDireccion_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/direccion_perfil"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTxtApellido_perfil" />

            <EditText
                android:id="@+id/txtDireccion_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="txtDireccion"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblTxtDireccion_perfil"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lblTxtCiudad_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/ciudad_perfil"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTxtDireccion_perfil" />

            <EditText
                android:id="@+id/txtCiudad_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="txtCiudad"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblTxtCiudad_perfil"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lblTxtTelefono_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/telefono_perfil"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTxtCiudad_perfil" />

            <EditText
                android:id="@+id/txtTelefono_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="txtTelefono"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblTxtTelefono_perfil"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lblTxtEmail_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/email_perfil"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTxtTelefono_perfil" />

            <EditText
                android:id="@+id/txtEmail_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="txtEmail"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblTxtEmail_perfil"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lblTxtUsuario_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/usuario_perfil"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTxtEmail_perfil" />

            <EditText
                android:id="@+id/txtUsuario_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="txtUsuario"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblTxtUsuario_perfil"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lblTxtClave_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/clave_perfil"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTxtUsuario_perfil" />

            <EditText
                android:id="@+id/txtClave_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="txtDni"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblTxtClave_perfil"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lblTxtDescripcion_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/descripcion_perfil"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTxtClave_perfil" />

            <EditText
                android:id="@+id/txtDescripcion_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="txtDescripcion"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblTxtDescripcion_perfil"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lblTxtEstado_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/estado_perfil"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTxtDescripcion_perfil" />

            <EditText
                android:id="@+id/txtEstado_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="txtEstado"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblTxtEstado_perfil"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/lblTxtCondicion_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:text="@string/condicion_perfil"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblTxtEstado_perfil"
                app:layout_constraintVertical_bias="0.0" />

            <Spinner
                android:id="@+id/spCondicion_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:text="txtCondicion"
                android:textSize="15sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/lblTxtCondicion_perfil"
                app:layout_constraintEnd_toEndOf="parent" />

            <Switch
                android:id="@+id/swEditar_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/editar_perfil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.551"
                app:layout_constraintStart_toEndOf="@+id/imgUsuario_perfil"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btnConfirmar_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/confirmar_perfil"
                android:backgroundTint="#FF9800"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.543"
                app:layout_constraintStart_toEndOf="@+id/imgUsuario_perfil"
                app:layout_constraintTop_toBottomOf="@+id/swEditar_perfil" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>